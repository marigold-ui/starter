{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommitTypeAll(chore)",
    ":rebaseStalePrs"
  ],
  "dependencyDashboard": true,
  "packageRules": [
    {
      "matchDatasources": ["npm"],
      "stabilityDays": 3
    },
    {
      "matchPackagePatterns": [
        "@marigold/components",
        "@marigold/system",
        "@marigold/theme-b2b",
        "@marigold/theme-core"
      ],
      "groupName": "marigold"
    }
  ]
}
